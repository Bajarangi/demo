<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@mipmap/logo"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/app_black"
        />

    <RadioGroup
        android:id="@+id/radioRole"
        android:layout_margin="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Role_One"
            android:button="@null"
            android:background="@color/app_yellow_background"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="20sp"
            android:drawableRight="@android:drawable/btn_radio"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioDriver"
            android:layout_width="match_parent"
            android:button="@null"
            android:textSize="20sp"
            android:background="@color/app_yellow_background"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_height="wrap_content"
            android:text="@string/Role_two" />

        <RadioButton
            android:id="@+id/radioUser"
            android:layout_width="match_parent"
            android:button="@null"
            android:textSize="20sp"
            android:background="@color/app_yellow_background"
            android:paddingLeft="15dp"
            android:layout_marginTop="15dp"
            android:paddingRight="15dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_height="wrap_content"
            android:text="@string/Role_three" />

    </RadioGroup>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/Submit"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@color/app_orange_background"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
